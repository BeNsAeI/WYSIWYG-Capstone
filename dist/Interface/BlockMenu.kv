<MenuButton@ToggleButton>:
    font_size: 14
    group: 'menu'
    size_hint_x: 1
    size_hint_y: .1
    color: 0, 0, 0, 1
    background_normal: ''
    background_down: 'square-xxl.png'
    background_color: 0.9, 0.9, 0.9, 1

<BlockMenu@BoxLayout>:
    orientation: 'vertical'
    size_hint_x: 0.2
    canvas:
        Color:
            rgba: 0.17, 0.47, 0.68, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        height: .5
        orientation: 'vertical'
        MenuButton:
            text: "Data"

        MenuButton:
            text: "Methods"

        cl_button:

        MenuButton:
            text: "Layer"

        MenuButton:
            text: "Probe"

