<Scatterer>:
    do_rotation: False
    size_hint: None, None
    size: self.size

    canvas.after:
        Color:
            rgba: 1, 1, 1, .5
        Rectangle:
            size: self.size
            pos: self.pos

<modify_Screen>:
    BoxLayout:
        Label:
            text: 'Value: '
        TextInput:


<output_Block>:
    size: self.size
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Output'
        color: 0, 0, 0, 1

<variable_Block>:
    size: self.size
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Variable'
        color: 0, 0, 0, 1
    Button:
        pos: 0, 0
        text: 'Modify'
        size: self.texture_size
        on_release: root.sm.current = 'Settings'


<method_Block>:
    size: self.size
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Method'
        color: 0, 0, 0, 1
    Button:
        pos: 0, 0
        text: 'Modify'
        size: self.texture_size

<class_Block>:
    size: self.size
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Class'
        color: 0, 0, 0, 1
    Button:
        pos: 0, 0
        text: 'Modify'
        size: self.texture_size

<CustButton@Button>:
    font_size: 14
    color: 0, 0, 0, 1
    background_normal: ''
    background_down: 'square-xxl.png'
    background_color: 1, 1, 1, 1


<SampGridLayout>:
    rows: 3

    DocumentOptions:

    BuilderSuite:

    BuildSpace:

