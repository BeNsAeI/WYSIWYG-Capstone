<BuilderSuite@BoxLayout>:
    size_hint_y: None
    padding: 3
    height: 40
    spacing: 1
    canvas:
        Color:
            rgba: .88, .88, .88, 1
        Rectangle:
            pos: self.pos
            size: self.size
    CustButton:
        text: "Save"
        size: 40, 40
        size_hint_x: None
    CustButton:
        text: "Play"
        size: 40, 40
        size_hint_x: None
    CustButton:
        text: "Stop"
        size: 40, 40
        size_hint_x: None
    CustButton:
        text: "Extract"
        size_hint_x: None
        on_release: root.extract()

<Scatterer>:
    do_rotation: False
    size_hint: None, None
    size: self.size

    canvas.after:
        Color:
            rgba: 1, 1, 1, .5
        Rectangle:
            size: self.size
            pos: self.pos


<output_Block>:
    size: self.size
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    ##Label:
        ##text: 'Output'
        ##color: 0, 0, 0, 1

<variable_Block>:
    size: self.size
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
		##Button:
			##text: 'Modify'
			##height: 25
			##width: 25
			##on_release: root.varButton(type)
			##pos: self.pos
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			Label:
				text: 'Variable'
				color: 0, 0, 0, 1
		BoxLayout:
			Label:
				text: 'X'
				color: 255, 0, 0, 1
			TextInput:
				text: ""
				multiline: False
				font_size: 10
		BoxLayout:	
			Label:
				text: 'Y'
				color: 0, 255, 0, 1
			TextInput:
				text: ""
				multiline: False
				font_size: 10
		BoxLayout:
			Label:
				text: 'Z'
				color: 0, 0, 255, 1
			TextInput:
				text: ""
				multiline: False
				font_size: 10
				
<method_Block>:
    size: self.size
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Method'
        color: 0, 0, 0, 1

<class_Block>:
    size: self.size
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Class'
        color: 0, 0, 0, 1

<CustButton@Button>:
    font_size: 14
    color: 0, 0, 0, 1
    background_normal: ''
    background_down: 'square-xxl.png'
    background_color: 1, 1, 1, 1


