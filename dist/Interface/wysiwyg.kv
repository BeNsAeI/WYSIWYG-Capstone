<Scatterer>:
    do_rotation: False
    size_hint: None, None
    size: self.size

    canvas.after:
        Color:
            rgba: 1, 1, 1, .5
        Rectangle:
            size: self.size
            pos: self.pos

<output_Block>:
    size: self.size
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Output'
        color: 0, 0, 0, 1

<variable_Block>:
    size: self.size
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
	GridLayout:
		rows: 2
		cols: 2
		Button:
			text: 'Modify'
			height: 25
			width: 25
			on_release: root.varButton(type)
			pos: self.pos
		TextInput:
			textIn: ""
			multiline: False
			height: 25
			width: 25
		Label:
			text: 'Variable'
			color: 0, 0, 0, 1

<method_Block>:
    size: self.size
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Method'
        color: 0, 0, 0, 1

<class_Block>:
    size: self.size
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Class'
        color: 0, 0, 0, 1

<CustButton@Button>:
    font_size: 14
    color: 0, 0, 0, 1
    background_normal: ''
    background_down: 'square-xxl.png'
    background_color: 1, 1, 1, 1


<SampGridLayout>:
    rows: 3

    DocumentOptions:

    BuilderSuite:

    BuildSpace:

